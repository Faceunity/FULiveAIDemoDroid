<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_tongue_track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_tongue_track_item"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_tongue_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/selector_tongue_track_item"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="@string/tongue_track_left_down" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_tongue_track_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/selector_tongue_track_item"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="@string/emotion_track_confuse" />

</FrameLayout>