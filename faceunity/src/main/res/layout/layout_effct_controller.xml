<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="16dp"
            android:text="人体AI技术"
            android:textColor="@color/text_title"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/config_divider" />

        <com.faceunity.nama.view.EffectMultiControllerView
            android:id="@+id/face_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp" />

        <com.faceunity.nama.view.EffectSpeControllerView
            android:id="@+id/body_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp" />

        <com.faceunity.nama.view.EffectSingleControllerView
            android:id="@+id/gesture_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp" />

        <com.faceunity.nama.view.EffectSingleControllerView
            android:id="@+id/segmentation_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp" />

        <com.faceunity.nama.view.EffectSingleControllerView
            android:id="@+id/action_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_config_reset"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_config_button_normal"
                android:gravity="center"
                android:text="@string/btn_reset"
                android:textColor="@color/text_classification_normal"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/btn_config_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="2"
                android:background="@drawable/shape_bg_config_button_dark"
                android:gravity="center"
                android:text="@string/btn_confirm"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>